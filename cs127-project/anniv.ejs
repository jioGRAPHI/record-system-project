<% include header.ejs %>
    <div class="table-wrapper">
        <% if (alumni.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Student Number</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Anniversary</th>
                    </tr>
                </thead>
                <tbody>
                    <% alumni.forEach((alum, index) => { %>
                        <tr>
                            <th scope="row"><%= alum.stdno %></th>
                            <td><%= alum.lname %></td>
                            <td><%= alum.fname %></td>
                            <td><%= alum.anniv %></td>
                            <td>
                                <a href="/edit/<%= alum.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= alum.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No alumni found. Go <a href="/add" >here</a> to add alumni.</p>
        <% } %>
    </div>
</div>
</body>
</html>