<% include header.ejs %>
    <div class="table-wrapper">
        <% if (alumni.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Employee Number</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Middle Name</th>
                        <th scope="col">Year Employed</th>
                        <th scope="col">Contact Number/th>
                        <th scope="col">Email</th>
                    </tr>
                </thead>
                <tbody>
                    <% alumni.forEach((alum, index) => { %>
                        <tr>
                            <th scope="row"><%= alum.empno %></th>
                            <td><%= alum.lname %></td>
                            <td><%= alum.fname %></td>
                            <td><%= alum.mname %></td>
                            <td><%= alum.yearemployed %></td>
                            <td><%= alum.contactno %></td>
                            <td><%= alum.email %></td>
                            <td>
                                <a href="/edit/<%= alum.empno %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= alum.empno %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No admin found. Go <a href="/searchAdmin2" >here</a> to add alumni.</p>
        <% } %>
    </div>
</div>
</body>
</html>
