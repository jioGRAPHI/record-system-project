<% include header.ejs %>
    <div class="table-wrapper">
        <% if (alumni.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Student Number</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Middle Name</th>
                        <th scope="col">Degree</th>
                        <th scope="col">Batch</th>
                        <th scope="col">Class</th>
                        <th scope="col">Occupation</th>
                    </tr>
                </thead>
                <tbody>
                    <% alumni.forEach((alum, index) => { %>
                        <tr>
                            <th scope="row"><%= alum.stdno %></th>
                            <td><%= alum.lname %></td>
                            <td><%= alum.fname %></td>
                            <td><%= alum.mname %></td>
                            <td><%= alum.degree %></td>
                            <td><%= alum.batch %></td>
                            <td><%= alum.yeargraduated %></td>
                            <td><%= alum.occupation %></td>
                            <td>
                                <a href="/return/<%= alum.stdno %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Revert</a>
                                <a href="/deleteArchived/<%= alum.stdno %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No alumni found. Go <a href="/add" >here</a> to add alumni.</p>
        <% } %>
    </div>
</div>
</body>
</html>
